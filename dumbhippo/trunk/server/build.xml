<project name="dumbhippo-server" default="build" basedir=".">
	<property name="src" value="src" />
	<property name="src.tests" value="tests" />
	<property name="web" value="web"/>	
	<property name="build" value="bin" />
	<property name="lib" value="lib" />
	<property name="reports.tests" value="reports" />

	<path id="project.class.path">
		<pathelement path="${classpath}" />
		<fileset dir="${lib}" >
			<include name="**/*.jar"/>
		</fileset>
		<!-- these two are here instead of in ${lib} since we want
		     to use the same ones as tomcat, etc. -->
		<pathelement location="/usr/share/java/servletapi5.jar" />
		<pathelement location="/usr/share/java/log4j.jar" />
		<pathelement location="/usr/share/java/javamail/mailapi.jar" />		
		<!-- without this ant won't find the .class files -->
		<pathelement location="${build}" />
		<!-- a little hard-coded, but ... -->
		<pathelement location="/usr/share/java/ant/ant-junit.jar" />
	</path>

	<target name="init">
		<mkdir dir="${build}" />
		<mkdir dir="${reports.tests}" />
	</target>

	<target name="compile" depends="init">
		<!-- Compile the java code -->
		<javac srcdir="${src}" destdir="${build}" source="1.5">
			<classpath refid="project.class.path" />
		</javac>

	</target>


	<!-- Move over other files -->

	<patternset id="metadata">
		<include name="**/*.hbm.xml" />
		<include name="**/*.properties" />
	</patternset>

	<target name="setupmetadata" depends="copymappings,copyproperties">
	</target>

	<target name="copymappings" depends="init">
		<copy todir="${build}">
			<fileset dir="${src}">
				<patternset refid="metadata" />
			</fileset>
		</copy>
	</target>

	<target name="copyproperties" depends="init">
		<copy todir="${build}" file="hibernate.properties" />
		<copy todir="${build}" file="ehcache.xml" />
	</target>

	<target name="test" depends="compile,setupmetadata">
		<javac srcdir="${src.tests}" destdir="${build}" source="1.5">
			<classpath refid="project.class.path" />
		</javac>
		<!-- fork=yes required for assertions to be enabled -->
		<junit printsummary="yes" haltonfailure="yes">
			<assertions enableSystemAssertions="true">
				<enable/>
			</assertions>
			<formatter type="plain" usefile="false" />
			<formatter type="xml" />
			<batchtest fork="yes" todir="${reports.tests}">
				<fileset dir="${src.tests}">
					<include name="AllTests.java" />
				</fileset>
			</batchtest>
			<classpath refid="project.class.path" />
		</junit>
	</target>

	<target name="package-servlet" depends="init, copyproperties, copymappings">
		<war destfile="${build}/dumbhippo.war" webxml="web/servlet-info.xml">
			<fileset dir="${web}" includes="**/*" excludes="**/*.js"/>
			<fileset dir="${web}" includes="tests/*.js"/>
			
			<lib dir="/usr/share/java">
		    		<include name="xerces-j2.jar"/>
				<include name="commons-collections.jar"/>
				<include name="commons-logging.jar"/>
				<include name="commons-fileupload.jar"/>
				<include name="log4j.jar"/>
				<include name="taglibs-core.jar"/>
				<include name="taglibs-standard.jar"/>			
			</lib>
			<lib dir="lib">
				<include name="antlr-2.7.5H3.jar"/>					
				<include name="c3p0-0.8.5.2.jar"/>				
				<include name="hibernate-3.0.5.jar"/>
				<include name="dom4j-1.6.jar"/>
				<include name="ehcache-1.1.jar"/>
				<include name="cglib-2.1.jar"/>
				<include name="asm.jar"/>
				<include name="asm-util.jar"/>				
				<include name="asm-attrs.jar"/>
			</lib>
			<classes dir="${build}">
		  		<exclude name="*.war"/>
			</classes>
		</war>
	</target>	
	
	<target name="build" depends="test,setupmetadata" />

</project>
