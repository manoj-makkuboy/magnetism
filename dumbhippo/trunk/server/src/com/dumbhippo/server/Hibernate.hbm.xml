<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dumbhippo.server">
	<class name="Client">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="authKey"/>
		<property name="name"/>
		<property name="lastUsed"/>
	</class>
	<class name="com.dumbhippo.persistence.GuidPersistable">
		<id name="id" type="string">
			<column name="GUID" length="48" not-null="true"/>
			<!-- We will always invent the GUID ourselves -->
			<generator class="assigned" />
		</id>
		<joined-subclass name="Person">
			<key column="GUID"/>
		</joined-subclass>
		<joined-subclass name="Resource">
			<key column="GUID" />
			<joined-subclass name="EmailResource">
				<key column="GUID" />
				<property name="email" column="EMAIL" />
			</joined-subclass>
			<joined-subclass name="HippoResource">
				<key column="GUID" />
				<set name="clients" access="field">
			    	<key column="CLIENT_ID"/>
				    <one-to-many class="Client"/>
	    		</set>
			</joined-subclass>
		</joined-subclass>
	</class>
	<class name="ResourceOwnershipClaim">
		<id name="id">
			<generator class="native"/>
		</id>
		<many-to-one name="claimedOwner" access="field" not-null="true"></many-to-one>
		<many-to-one name="resource" access="field" not-null="true"></many-to-one>
		<many-to-one name="assertedBy" access="field"></many-to-one>
	</class>
	<class name="Invitation">
		<id name="id">
			<generator class="native"/>
		</id>
		<many-to-one name="invitee" access="field" not-null="true"></many-to-one>
		<property name="authKey" access="field"></property>
	    <set name="inviters" access="field">
    	    <key column="INVITATION_GUID"/>
	        <one-to-many class="Person"/>
	    </set>
	</class>
</hibernate-mapping>
