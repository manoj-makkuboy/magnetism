<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
        package="com.dumbhippo.server">
<class name="Resource" table="RESOURCE">
    <id name="id" type="string">
        <column name="RESOURCE_ID" length="48" not-null="true"/>
        <!-- We will always invent the GUID ourselves -->
        <generator class="assigned"/>
    </id>
    <joined-subclass name="EmailResource" table="RESOURCE_EMAIL">
        <key column="RESOURCE_ID"/>
        <property name="email" column="EMAIL"/>
    </joined-subclass>
    <joined-subclass name="HippoResource" table="RESOURCE_HIPPO">
        <key column="RESOURCE_ID"/>
	    <property name="hippoHandle" column="HANDLE"/>
    </joined-subclass>
</class>
</hibernate-mapping>
