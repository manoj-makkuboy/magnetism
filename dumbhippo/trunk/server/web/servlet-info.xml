<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

   <display-name>DumbHippo</display-name>
   <description>
       The DumbHippo web application  
   </description>
   
   <!-- URLs hard-coded to go to our custom servlets -->
    
    <servlet>
      <servlet-name>HttpMethodsServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.HttpMethodsServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>   

   <servlet>
      <servlet-name>PostThumbnailServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.PostThumbnailServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>   

   <servlet>
      <servlet-name>NowPlayingThemePhotoServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.NowPlayingThemePhotoServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>   

   <servlet>
      <servlet-name>PersonPhotoServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.PersonPhotoServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>   

    <servlet>
      <servlet-name>GroupPhotoServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.GroupPhotoServlet</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>

    <servlet>
      <servlet-name>RedirectServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.RedirectServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>WantsInServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.WantsInServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet> 

    <servlet>
      <servlet-name>SigninServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.SigninServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet> 

    <servlet>
      <servlet-name>AbnormalErrorServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.AbnormalErrorServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>SendInviteServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.SendInviteServlet</servlet-class>
    </servlet>    

	<!--  I can't figure out how to handle "all error codes" - "*" doesn't work afaict -->
	<error-page>
      <error-code>404</error-code>
      <location>/unknownlink</location>
	</error-page>

	<error-page>
      <error-code>500</error-code>
      <location>/abnormalerror</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/abnormalerror</location>
	</error-page>
    
   <servlet-mapping>
      <servlet-name>HttpMethodsServlet</servlet-name>
      <url-pattern>/xml/*</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>HttpMethodsServlet</servlet-name>
      <url-pattern>/text/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>HttpMethodsServlet</servlet-name>
      <url-pattern>/action/*</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>RedirectServlet</servlet-name>
      <url-pattern>/redirect</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>SendInviteServlet</servlet-name>
      <url-pattern>/sendinvite</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>PersonPhotoServlet</servlet-name>
      <url-pattern>/upload/headshots</url-pattern>    
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>PersonPhotoServlet</servlet-name>
	  <url-pattern>/files/headshots/*</url-pattern>      
   </servlet-mapping>   

   <servlet-mapping>
      <servlet-name>GroupPhotoServlet</servlet-name>
      <url-pattern>/upload/groupshots</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>GroupPhotoServlet</servlet-name>
      <url-pattern>/files/groupshots/*</url-pattern>
   </servlet-mapping>   
   
   <servlet-mapping>
      <servlet-name>PostThumbnailServlet</servlet-name>
      <url-pattern>/upload/postinfo</url-pattern>
   </servlet-mapping>      
   
   <servlet-mapping>
      <servlet-name>PostThumbnailServlet</servlet-name>
      <url-pattern>/files/postinfo/*</url-pattern>
   </servlet-mapping>   

   <servlet-mapping>
      <servlet-name>NowPlayingThemePhotoServlet</servlet-name>
      <url-pattern>/upload/nowplaying-themes</url-pattern>
   </servlet-mapping>      
   
   <servlet-mapping>
      <servlet-name>NowPlayingThemePhotoServlet</servlet-name>
      <url-pattern>/files/nowplaying-themes/*</url-pattern>
   </servlet-mapping>   

   <servlet>
      <servlet-name>VerifyServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.VerifyServlet</servlet-class>
   </servlet>   
   
   <servlet-mapping>
      <servlet-name>VerifyServlet</servlet-name>
      <url-pattern>/verify</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>AbnormalErrorServlet</servlet-name>
      <url-pattern>/abnormalerror</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>WantsInServlet</servlet-name>
      <url-pattern>/wantsin</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>SigninServlet</servlet-name>
      <url-pattern>/signinpost</url-pattern>
   </servlet-mapping>

   <!-- Map everything else to our URL-Rewriting servlet -->  

   <servlet>
      <servlet-name>RewriteServlet</servlet-name>
      <servlet-class>com.dumbhippo.web.RewriteServlet</servlet-class>
      <!-- Every page (other than psa-*) must be in one of these lists; please keep them alphabetical -->
      <init-param>
          <param-name>noSignin</param-name>
          <param-value>comingsoon,error,unknownlink,upgrade,who-are-you,signup</param-value>
      </init-param>
      <init-param>
          <param-name>requiresSigninStealth</param-name>
          <param-value>about,artist,bookmark,download,framer,getradar,group,groups,landing,links,links-learnmore,main,members,music,person,privacy,radar-html,radar-learnmore,radar-themes,search,terms,tv,visit</param-value>
      </init-param>
      <init-param>
          <param-name>requiresSignin</param-name>
          <param-value>account,admin,chatwindow,create-group,friends,group-account,group-invitation,home,invitation,radar-theme-creator,sharelink,sharephotoset,sharephotoset-first</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>
   </servlet>   

   <servlet-mapping>
      <servlet-name>RewriteServlet</servlet-name>
      <url-pattern>/</url-pattern>
   </servlet-mapping>
  
   <mime-mapping>
   		<extension>swf</extension>
   		<mime-type>application/x-shockwave-flash</mime-type>
   </mime-mapping>

   <welcome-file-list>
      <welcome-file>index.html</welcome-file>
   </welcome-file-list>
</web-app>
        
