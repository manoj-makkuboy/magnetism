<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
   <navigation-rule>
      <!-- these global rules apply to all from-view-ids -->
      <navigation-case>
         <from-outcome>main</from-outcome>
         <to-view-id>/jsf/main.jsp</to-view-id>
         <redirect/>
      </navigation-case>
      <navigation-case>
         <from-outcome>sharelink</from-outcome>
         <to-view-id>/jsf/sharelink.jsp</to-view-id>
         <redirect/>
      </navigation-case>
      <navigation-case>
         <from-outcome>login</from-outcome>
         <to-view-id>/jsf/addclient.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   <!-- these rules with from-view-id apply only to the given page -->
   <navigation-rule>
      <from-view-id>/jsf/main.jsp</from-view-id>
      <navigation-case>
         <from-outcome>addclient</from-outcome>
         <to-view-id>/jsf/addclient.jsp</to-view-id>
         <redirect/>
      </navigation-case>      
      <navigation-case>
         <from-outcome>invite</from-outcome>
         <to-view-id>/jsf/invite.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   <navigation-rule>
      <from-view-id>/jsf/invite.jsp</from-view-id>
      <navigation-case>
         <from-outcome>invitesent</from-outcome>
         <to-view-id>/jsf/invitesent.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
    <navigation-rule>
      <from-view-id>/jsf/invitesent.jsp</from-view-id>
      <navigation-case>
         <from-outcome>verify</from-outcome>
         <to-view-id>/jsf/verify.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   <navigation-rule>
      <from-view-id>/jsf/verify.jsp</from-view-id>
      <navigation-case>
         <from-outcome>submitverify</from-outcome>
         <to-view-id>/jsf/main.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
	<navigation-rule>
      <from-view-id>/jsf/addclient.jsp</from-view-id>
      <navigation-case>
         <from-outcome>main</from-outcome>
         <to-view-id>/jsf/main.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   <navigation-rule>
      <from-view-id>/jsf/sharelink.jsp</from-view-id>
      <navigation-case>
         <from-outcome>sharelinkcomplete</from-outcome>
         <to-view-id>/jsf/sharelinkcomplete.jsp</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>

   <managed-bean> 
      <managed-bean-name>signin</managed-bean-name>
      <managed-bean-class>com.dumbhippo.web.SigninBean</managed-bean-class> 
      <!-- request scope so we re-check on each page load for login -->
      <managed-bean-scope>request</managed-bean-scope>
   </managed-bean>
 
   <managed-bean> 
      <managed-bean-name>invite</managed-bean-name>
      <managed-bean-class>com.dumbhippo.web.InviteBean</managed-bean-class> 
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean> 
      <managed-bean-name>addclient</managed-bean-name>
      <managed-bean-class>com.dumbhippo.web.AddClientBean</managed-bean-class> 
      <managed-bean-scope>request</managed-bean-scope>
      <managed-property>
        <!-- faces action to go to afterword -->
        <property-name>goBackTo</property-name>
        <value>#{param.goBackTo}</value>
      </managed-property>
   </managed-bean>   
   
   <managed-bean> 
      <managed-bean-name>verify</managed-bean-name>
      <managed-bean-class>com.dumbhippo.web.VerifyBean</managed-bean-class> 
      <managed-bean-scope>request</managed-bean-scope>
      <managed-property>
        <property-name>authKey</property-name>
        <value>#{param.authKey}</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean> 
      <managed-bean-name>sharelink</managed-bean-name>
      <managed-bean-class>com.dumbhippo.web.ShareLinkBean</managed-bean-class> 
      <managed-bean-scope>request</managed-bean-scope>
   </managed-bean>
</faces-config>
